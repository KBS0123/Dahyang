<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="spring_Dahyang.apply.repository.ApplyMapper">
	
	<resultMap type="Apply" id="applyResultMap">
		<result property="applyId" column="APPLY_ID" />
		<result property="clid" column="CLUB_ID" />
		<result property="applied" column="APPLIED" />
	</resultMap>
	
	<!-- 가입 등록 -->
	<insert id="insert" parameterType="Apply">
		insert into dclub_apply values (#{applyId}, #{clid}, #{uid})
	</insert>
	
	<!-- 가입 삭제 -->
	<delete id="delete" parameterType="int">
		delete from dclub_apply where apply_id=#{applyId}
	</delete>
	
	<!-- 가입 신청 리스트 -->
	<select id="selectAll" parameterType="int">
		select apply_id, applied from dclub_apply where club_id=#{clid}
	</select>
	
</mapper>